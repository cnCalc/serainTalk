{
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack-dev-server --hot --host 127.0.0.1 --open",
    "remote-dev": "cross-env NODE_ENV=development webpack-dev-server --hot --host $(ip addr | grep -P 'inet ' | grep -vP '127.0.0.\\d{1,3}/8' | grep -Po '(\\d{1,3}\\.{0,1}){4}' | head -n 1)",
    "production": "cross-env cross-env NODE_ENV=production node server.js", 
    "build:server": "cross-env NODE_ENV=production webpack --config build/webpack.server.config.js --progress --hide-modules",
    "build:client": "cross-env NODE_ENV=production webpack --config build/webpack.client.config.js --progress --hide-modules",
    "build": "npm run build:server && npm run build:client"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "express": "^4.16.3",
    "memory-fs": "^0.4.1",
    "pug": "^2.0.3",
    "socket.io-client": "^2.1.1",
    "vue": "^2.5.17",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.5.17",
    "vuex": "^3.0.1",
    "vuex-router-sync": "^5.0.0",
    "webpack-hot-middleware": "^2.22.3",
    "webpack-merge": "^4.1.4",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "babel-loader": "^8.0.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "file-loader": "^2.0.0",
    "node-sass": "^4.9.3",
    "pug-plain-loader": "^1.0.0",
    "sass-loader": "^7.1.0",
    "vue-loader": "^15.4.1",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.7"
  }
}
