{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach",
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "--exit",
        "--recursive",
        "-b",
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceRoot}/test",
        // "--grep",
        // "recover a post by admin"
      ],
      "env": {
        "NODE_ENV": "mocha"
      },
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": [
        "${workspaceRoot}/node_modules/**/*.js",
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "启动程序 - dev",
      "program": "${workspaceFolder}/index",
      "env": {
        "NODE_ENV": "dev"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "启动程序 - product",
      "program": "${workspaceFolder}/index",
      "env": {
        "NODE_ENV": "product",
        "release": "stable"
      }
    }
  ]
}