{
  "name": "serain-talk",
  "description": "Next generation forum engine designed for cnCalc.org",
  "version": "1.0.0",
  "author": "ntzyz <ntzyz@live.cn>",
  "private": true,
  "scripts": {
    "lint": "node ./node_modules/.bin/eslint *.js handlers/*.js  utils/*.js web/src/*.js web/src/components/*.vue web/src/store/*.js web/src/utils/*.js",
    "test": "_mocha ./test/ -R spec --compilers js:babel-core/register --require babel-polyfill --recursive -u tdd --timeout 999999 --colors",
    "cover": "nyc npm test && nyc report --reporter=text-lcov | coveralls && rm -rf ./coverage && rm -rf ./.nyc_output"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "dependencies": {
    "cookie-parser": "^1.4.3",
    "express": "^4.15.2",
    "jsonwebtoken": "^7.4.1",
    "md5": "^2.2.1",
    "mongodb": "^2.2.26",
    "randomstring": "^1.1.5"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.0.2",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.1",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-vue": "^2.0.2",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-vue": "^2.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^11.0.2",
    "supertest": "^3.0.0"
  }
}
