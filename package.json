{
  "name": "serain-talk",
  "description": "Next generation forum engine designed for cnCalc.org",
  "version": "1.0.0",
  "author": "ntzyz <ntzyz@live.cn>",
  "contributors": [
    "kasora <kasorasun@gmail.com>"
  ],
  "private": true,
  "scripts": {
    "init": "node ./database-init/index.js",
    "lint": "eslint $(find . \\( -name \"*.js\" -o -name \"*.vue\" \\) -not \\( -path \"./coverage/*\" -o -path \"./node_modules/*\" -o -path \"./web/node_modules/*\" -o -path \"./app/public/*\" -o -path \"./web/dist/*\" -o -path \"./uploads/*\" -o -name \".*\" \\))",
    "test": "cross-env NODE_ENV=mocha nyc _mocha ./test/ -R spec --compilers js:babel-core/register --require babel-polyfill --recursive -u tdd --timeout 999999 --colors",
    "cover": "nyc report --reporter=text-lcov | coveralls && rm -rf ./coverage && rm -rf ./.nyc_output",
    "postinstall": "cd web ; which cnpm > /dev/null 2> /dev/null ; if test \"$?\" -eq \"0\" ; then cnpm i ; else npm i ; fi ;",
    "build": "cd web && npm run build && cp -r dist ../app/public && cp index.html ../app/public",
    "dev": "node ./index.js",
    "production:stable": "cross-env NODE_ENV=production RELEASE=stable node ./index.js",
    "production:beta": "cross-env NODE_ENV=production RELEASE=beta node ./index.js"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "dependencies": {
    "body-parser": "^1.18.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.15.2",
    "express-validation": "^1.0.2",
    "highlight.js": "^9.12.0",
    "joi": "^11.0.1",
    "joi-to-json-schema": "^3.2.0",
    "jsonwebtoken": "^7.4.1",
    "lodash": "^4.17.4",
    "markdown-it": "^8.4.0",
    "mongodb": "^2.2.26",
    "multer": "^1.3.0",
    "nodemailer": "^4.4.2",
    "socket.io": "^2.0.4"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.0.2",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.1",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-vue": "^2.0.2",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-vue": "^2.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^11.0.2",
    "supertest": "^3.0.0"
  }
}
