{
  "name": "serain-talk",
  "description": "Next generation forum engine designed for cnCalc.org",
  "version": "1.0.0",
  "author": "ntzyz <ntzyz@live.cn>",
  "contributors": [
    "kasora <kasorasun@gmail.com>"
  ],
  "private": false,
  "scripts": {
    "init": "node ./database-init/index.js",
    "lint": "eslint --fix $(find . \\( -name \"*.js\" -o -name \"*.vue\" \\) -not \\( -path \"./coverage/*\" -o -path \"./node_modules/*\" -o -path \"./web/node_modules/*\" -o -path \"./app/public/*\" -o -path \"./web/dist/*\" -o -path \"./uploads/*\" -o -name \".*\" \\))",
    "test": "cross-env NODE_ENV=mocha nyc _mocha ./test/ -R spec --recursive -u tdd --timeout 999999 --colors --exit",
    "cover": "nyc report --reporter=text-lcov | coveralls && rm -rf ./coverage && rm -rf ./.nyc_output",
    "postinstall": "cd web ; which cnpm > /dev/null 2> /dev/null ; if test \"$?\" -eq \"0\" ; then cnpm i ; else npm i ; fi ;",
    "build": "cd web && npm run build",
    "dev": "node --inspect ./index.js",
    "production:stable": "cross-env NODE_ENV=production RELEASE=stable node ./index.js",
    "production:beta": "cross-env NODE_ENV=production RELEASE=beta node ./index.js"
  },
  "nyc": {
    "require": [
      "@babel/register",
      "@babel/polyfill",
      "intelli-espower-loader"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-async-to-generator"
    ]
  },
  "dependencies": {
    "body-parser": "^1.18.1",
    "chalk": "^2.3.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.15.2",
    "express-validation": "^1.0.2",
    "highlight.js": "^9.12.0",
    "joi": "^14.3.1",
    "joi-to-json-schema": "^3.2.0",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.4",
    "markdown-it": "^8.4.0",
    "mmmagic": "^0.5.0",
    "mongodb": "^3.0.7",
    "multer": "^1.3.0",
    "nodejieba": "^2.3.0",
    "nodemailer": "^5.1.1",
    "sharp": "^0.21.3",
    "socket.io": "^2.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-transform-async-to-generator": "^7.2.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-istanbul": "^5.1.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.0.1",
    "eslint": "^5.13.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "eslint-plugin-vue": "^5.1.0",
    "intelli-espower-loader": "^1.0.1",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^13.2.0",
    "power-assert": "^1.6.1",
    "supertest": "^3.0.0"
  }
}
